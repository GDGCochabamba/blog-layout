//importando archivo normalize
@import 'normalize.styl'

//importando iconos
@font-face {
  font-family: 'icomoon';
  src:url('../fonts/icomoon.eot?nplm6g');
  src:url('../fonts/icomoon.eot?nplm6g#iefix') format('embedded-opentype'),
  url('../fonts/icomoon.ttf?nplm6g') format('truetype'),
  url('../fonts/icomoon.woff?nplm6g') format('woff'),
  url('../fonts/icomoon.svg?nplm6g#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  font-family: 'icomoon';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
  //icono de lista
.icon-list:before {
  content: "\e600";
}
  //icono de ventana de chat
.icon-chat:before {
  content: "\e601";
}
  //icono de sobre de carta
.icon-envelope:before {
  content: "\e605";
}
  //icono de me gusta
.icon-like:before {
  content: "\e602";
}
  //icono de calendario
.icon-calendar:before {
  content: "\e953";
}
.icon-google-plus:before {
  content: "\ea88";
}
.icon-facebook:before {
  content: "\ea8c";
}
.icon-youtube:before {
  content: "\ea99";
}
