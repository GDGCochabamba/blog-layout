//importando archivo normalize
@import 'normalize.styl'

//importando iconos
@font-face {
  font-family: 'icomoon';
  src:url('../fonts/icomoon.eot?nplm6g');
  src:url('../fonts/icomoon.eot?nplm6g#iefix') format('embedded-opentype'),
  url('../fonts/icomoon.ttf?nplm6g') format('truetype'),
  url('../fonts/icomoon.woff?nplm6g') format('woff'),
  url('../fonts/icomoon.svg?nplm6g#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  font-family: 'icomoon';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
  //icono de lista
.icon-list:before {
  content: "\e600";
}
  //icono de ventana de chat
.icon-chat:before {
  content: "\e601";
}
  //icono de sobre de carta
.icon-envelope:before {
  content: "\e605";
}
  //icono de me gusta
.icon-like:before {
  content: "\e602";
}
  //icono de calendario
.icon-calendar:before {
  content: "\e953";
}
.icon-google-plus:before {
  content: "\ea88";
}
.icon-facebook:before {
  content: "\ea8c";
}
.icon-youtube:before {
  content: "\ea99";
}
  //Agregando paleta de colores
_black-dark = #3F3E40
_black-regular = #4D4D4D

_sky-blue = #00BDD6

_green-dark = #00903B
_green-regular = #00B74C

_red-dark = #FF183E

_white = #FFFFFF
  //agregando estilos generales
body
  margin 0
  font-family 'Roboto', sans-serif

a
  text-decoration none
li
  list-style none
ul
  padding 0
  margin 0
p
  padding 0
  margin 0
img
  width 100%

h1,h2,h3,h4,h5,h6
  padding 0
  margin 0

.section-space
    padding-top 4rem
.about-what, .about-do, .vision, .videos
    position relative
.title-box
    color white
    .title-box__main
        text-transform uppercase
        font-size 4em
        font-weight 200
        .title-box__text
            font-size 1.25em
.page__header
    margin 0
    .nav-site
        background-color #414042
        padding 1rem
        .nav-site__menu
            float left
            line-height 1.5em
            .nav-site__list
                margin 0
                padding 0
                .nav-site__item
                    text-transform uppercase
                    margin-right 2.5em
                    font-weight 500
                    font-size 1rem
                    display inline-block
                    text-transform uppercase
                    border-bottom 2px solid white
                    .nav-site__link
                        color white
        .social-network
            float right
            .social-network__list
                margin 0
                padding 0
                .social-network__item
                    display inline-block
                    font-size 1.4rem
                    border 1px solid white
                    border-radius .2em
                    padding .2em
                    background-color white
                    margin-left .2em
                    .social-network__link
                        color #414042
                        display block
                        span
                            text-align center
                            text-shadow 0px 1px
        &:after
            content ""
            clear both
            display block
.about-what
    background-color #4E4E4E
    padding 0
    margin 0

.cloud, .hill, .build
    position absolute
    margin-right auto
    margin-left auto
    right 0
    left 0
    font-size 0
    text-align center
    bottom 0
.align
    margin-right auto
    margin-left auto
    max-width 74em

.about-us
    background-color _sky-blue
    position relative
    text-align center
    min-height 42rem
    max-height 32rem
    .cloud
        max-width 90%
        top 0
        margin-top 50px
        display table
    .build
        max-width 70%
    .about-us__logo
        position relative
        margin-right auto
        margin-left  auto
        display table
        img
            height 200px
    .card
        font-size 1rem
        display table
        margin 0 auto
        width 29rem
        position relative
        box-shadow 2px 2px 17px 0px _black-dark
        &__content
            padding 6.5rem 0
            background-color _white
        &__description
            background-color _green-dark
            color _white
            position relative
            padding .5rem 0
            .icon-calendar, .card__data
                display inline-block
                vertical-align  middle
            .card__data
                width 83%
                text-align left
                .card__title
                    text-transform uppercase
                    font-weight 400
                    font-size 2rem
                .card__date
                    font-style oblique
                    font-weight 300
                    font-size 1.3rem
            .icon-calendar
                width 15%
                font-size 3.5rem
            .card__button
                position absolute
                top -50px
                right 20
                background-color _red-dark
                padding 1.5rem 1.2rem
                border-radius 50%
                font-size 2rem
                box-shadow 2px 4px 7px -1px _black-dark






