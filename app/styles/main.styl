  //agregando estilos generales
body
  margin 0
  font-family 'Roboto', sans-serif

a
  text-decoration none
li
  list-style none
ul
  padding 0
  margin 0
p
  padding 0
  margin 0

h1,h2,h3,h4,h5,h6
  padding 0
  margin 0
.title-box
    color white
    .title-box__main
        text-transform uppercase
        font-size 4em
        font-weight 200
        .title-box__text
            font-size 1.25em
.page__header
    margin 0
    .nav-site
        background-color #414042
        padding 1rem
        .nav-site__menu
            float left
            line-height 1.5em
            .nav-site__list
                margin 0
                padding 0
                .nav-site__item
                    text-transform uppercase
                    margin-right 2.5em
                    font-weight 500
                    font-size 1rem
                    display inline-block
                    text-transform uppercase
                    border-bottom 2px solid white
                    .nav-site__link
                        color white
        .social-network
            float right
            .social-network__list
                margin 0
                padding 0
                .social-network__item
                    display inline-block
                    font-size 1.4rem
                    border 1px solid white
                    border-radius .2em
                    padding .2em
                    background-color white
                    margin-left .2em
                    .social-network__link
                        color #414042
                        display block
                        span
                            text-align center
                            text-shadow 0px 1px
        &:after
            content ""
            clear both
            display block
.about-what
    background-color #4E4E4E


